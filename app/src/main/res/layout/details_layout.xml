<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/databaseText"
        android:layout_width="347dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:text="Database id Goes here"
        app:layout_constraintStart_toStartOf="@+id/sendOrReceive"
        app:layout_constraintTop_toBottomOf="@+id/sendOrReceive" />

    <TextView
        android:id="@+id/messageTextt"
        android:layout_width="347dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Message goes here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeTextt"
        android:layout_width="347dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:text="Time Goes here"
        app:layout_constraintStart_toStartOf="@+id/messageTextt"
        app:layout_constraintTop_toBottomOf="@+id/messageTextt" />

    <TextView
        android:id="@+id/sendOrReceive"
        android:layout_width="347dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:text="Send receive goes here"
        app:layout_constraintStart_toStartOf="@+id/timeTextt"
        app:layout_constraintTop_toBottomOf="@+id/timeTextt" />
</androidx.constraintlayout.widget.ConstraintLayout>